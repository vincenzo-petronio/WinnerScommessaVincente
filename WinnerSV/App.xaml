<Application 
    x:Class="WinnerSV.App" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone" 
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    d1p1:Ignorable="d" 
    xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WinnerSV.ViewModels">
    
  <!--Application Resources-->
  <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/WinnerStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <local:LocalizedStrings xmlns:local="clr-namespace:WinnerSV" x:Key="LocalizedStrings" />
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />
        </ResourceDictionary>
      
        <!--<sys:Double x:Key="PanoramaItemHeaderFontSize">66</sys:Double>
        <Style x:Key="PanoramaItemHeaderTextStyle" TargetType="TextBlock">
          <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilySemiLight}" />
          <Setter Property="FontSize" Value="{StaticResource PanoramaItemHeaderFontSize}" />
          <Setter Property="CharacterSpacing" Value="-35" />
        </Style>-->
      
    </Application.Resources>
    
  <Application.ApplicationLifetimeObjects>
    <!--Required object that handles lifetime events for the application-->
    <shell:PhoneApplicationService 
        Launching="Application_Launching" 
        Closing="Application_Closing" 
        Activated="Application_Activated" 
        Deactivated="Application_Deactivated" />
  </Application.ApplicationLifetimeObjects>
</Application>